
LOG=/var/log/
cd $LOG || exit 1
rm crash-debug.log
renice -20 -p $$
screen -S crash-debug -d -m bash -c 'while true;do ( echo "=======> `date`"; top -b -n 1; vmstat 10 2;iostat -t -p ALL 10 2;ps fauxwwww;nfsstat -o all;lsof -n|awk "{print \$3 \$5;}"|grep -v USER|sort|uniq -c|sort -n ) 2>&1|tee -a crash-debug.log;sleep 30;done'
